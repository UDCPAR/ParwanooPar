@model PAR_Site.Models.Account_Info
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AccountInformation</title>
</head>
<body>
    @using (Html.BeginForm("AccountInformation", "Account", FormMethod.Post))
    {
        if (ViewBag.Message != null)
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>

        }

        <div class="col-lg-9" style="margin-top:-30px;">
            <p><a href="~/Default/Index" style="text-decoration:underline">Main Menu</a> >> Account Information</p>
            <div class="col-lg-12" style="background-color:lightskyblue;color:white;">
                <h5><b>Account Information</b></h5>
            </div>
            <br />
            <div class="col-lg-6" style="padding-top:30px; padding-bottom:20px;">
                <h5><b>Change Password</b></h5>
                <p>Use the form below to change your account password.</p>
            </div>
            <div class="col-lg-5" style="float:none;">
                <div class="form-group">
                    <label for="pwd">Current Password:</label>
                    @Html.TextBoxFor(m => m.OldPassword, new { @id = "TxtCurrentpwd", @class = "form-control", required = "required", Type = "Password" })
                    @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "error" })
                </div>
                <div class="form-group">
                    <label for="pwd">New Password:</label>
                    @Html.TextBoxFor(m => m.Password, new { @id = "TxtNewpwd", @class = "form-control", required = "required", Type = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                </div>
                <div class="form-group">
                    <label for="pwd">Confirm Password:</label>
                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @id = "TxtConfirmpwd", @class = "form-control", required = "required", Type = "Password" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "error" })
                </div>
                <button type="submit" id="btnlogin" class="btn btn-primary">Submit</button>
            </div>
        </div>

    }
</body>
</html>
