@model PAR_Site.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UDC PAR's</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        if (ViewBag.Message != null)
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
                };
            </script>
        }
        if (ViewBag.abc != null)
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.abc");
                };
            </script>
        }

        <div class="container">
            <div class="col-lg-12">
                <div style="padding-top:30px;">
                    <img src="~/Images/UDCLogo.png" />
                </div>
                <div class="col-lg-6" style="padding-top:10px;padding-bottom:20px;">
                    <h5><b>UDC/NAG Par Login</b></h5>
                    <p>Please use the username and password supplied to you by your account manager to access your account or contact <a href="mailto:Rakesh.kumar@udcus.com" target="_top">Rakesh.kumar@udcus.com</a> for a login.</p>
                </div>
                <div class="col-lg-6">
                </div>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-4">
                    <form action="" method="post">
                        <div class="form-group">
                            @Html.HiddenFor(model => model.TicketId, new { @id = "TicketId" })
                            <label>UserName:</label>
                            @Html.TextBoxFor(m => m.UserName, new { @id = "Txtusername", @class = "form-control", required = "required", autocomplete = "off", placeholder = "Enter UserName" })
                        </div>
                        <div class="form-group">
                            <label for="pwd">Password:</label>
                            @Html.TextBoxFor(m => m.Password, new { @id = "Txtpwd", @class = "form-control", required = "required", placeholder = "Enter Password", Type = "Password" })
                        </div>
                        <div class="form-group">
                            <label>Project:</label>
                            @Html.DropDownList("btnProject", new SelectList(ViewBag.Project, "Value", "Text"), "- Select Project -", new { @class = "form-control", @id = "Project", required = "required" })
                        </div>
                        <button type="submit" id="btnlogin" class="btn btn-primary">Login</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-6" style="padding-top:20px;">
                    <p>1.262.385.6972 | <a href="mailto:Rakesh.kumar@udcus.com">Rakesh.kumar@udcus.com</a></p>
                </div>
            </div>

        </div>
    }
</body>
</html>
